<%= form_with(model: @micropost, local: true) do |f| %>
<div  id = "input_form">
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :title %>
  <%= f.text_field :title, placeholder: "Add description...", class: 'form-control' %>

  <%= f.label :body %>
  <%= f.text_area :content, placeholder: "Compose new post...", class: 'form-control'%>

  <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png", class: "btn btn-primary"  %>

  <%= f.label :visibility %>
  <%= f.select :visibility, ["Public", "Private", "Followers"], {}, class: 'form-control' %>

  <%= f.label :status %>
  <%= f.select :status, ["Draft", "Published"], {}, class: 'form-control' %>

  <%= f.submit "Post", class: "btn btn-primary" %>
</div>
<% end %>
