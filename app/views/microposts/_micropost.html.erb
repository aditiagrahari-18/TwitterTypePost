<li id= "micropost-<%= micropost.id %>">
  <%= gravatar_for micropost.user %>
  <span class="user">
    <%= link_to micropost.user.first_name, micropost.user %>
  </span>
  <span class="content">
    <%= micropost.content %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    <% if current_user == micropost.user %>
      <% if micropost.archived == false %>
          <%= link_to "Archiev", micropost, method: :delete, data: { confirm: "You sure?" } %>
      <% end %>
    <% end %>
  </span>
</li>
</br>
