<div class="panel panel-success">
  <div class= "panel-heading" id= "micropost-<%= micropost.id %>" >
     <div class="panel-title"><%= gravatar_for micropost.user %>
        <%= link_to "#{micropost.user.first_name} #{micropost.user.last_name}", micropost.user %>
        <span class="timestamp">
              Posted <%= time_ago_in_words(micropost.created_at) %> ago.
        </span>
     </div>
  </div>
  <div class="panel-body">
    <span class="content">
       <h4 class="title">
         <%= micropost.title %>
       </h4>
       <%= micropost.content %>
    </span>
    </br>
    <div class="btn-group" role="group" aria-label="...">
       <p id = "like">Likes <%= micropost.likes.where(liked: true).count %>
         <%= link_to '<span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span>'.html_safe, micropost_like_path(micropost.id), method: :post %>
       Dislikes
       <%= micropost.likes.where(disliked: true).count %>
       <%= link_to '<span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"></span>'.html_safe, micropost_dislike_path(micropost.id), method: :post %>
       <% if current_user == micropost.user %>
         <% if micropost.archived == false %>
             <%= link_to "Archiev", micropost, method: :delete, data: { confirm: "You sure?" } %>
         <% end %>
       <% end %>
     </p>
     </div>
    </div>
  <div class="panel-footer">
    <span class="content">
     <%= render partial: "shared/comment", locals: {micropost: micropost} %>
    </span>
 </div>
</div>
